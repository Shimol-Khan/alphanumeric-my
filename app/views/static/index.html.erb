<% content_for :title do %>
  Home
<% end %>

<% provide(:home_active, 'active') %>

<!-------------------- Main Navbar ------------------>
<% if user_signed_in? %>
    <% if current_user.admin? %>
        <%= render 'shared/nav_admin' %>
    <% else %>
        <%= render 'shared/nav_user' %>
    <% end %>
<% else %>
    <%= render 'shared/nav_public' %>
<% end %>
<!-------------------/ Main Navbar ------------------>

<!---------------------- Menus ---------------------->
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-wrap -m-4">
    <!------------------ Math Quiz ------------------>
      <div class="p-4 lg:w-1/2">
        <div class="h-full bg-gradient-to-tr from-green-400 to-green-100 shadow-lg px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">Math Quiz</h1>
          <p class="leading-relaxed mb-3">Take Our Weekly Math Quiz</p>
          <%= link_to quiz_path, :class=>"text-gray-600 inline-flex items-center" do %>
            Take
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
      <!------------------ Math Quiz ------------------>

      <!----------------- Flash Card ------------------>
      <div class="p-4 lg:w-1/2">
        <div class="h-full bg-gradient-to-tr from-green-400 to-green-100 shadow-lg px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">Flash Card</h1>
          <p class="leading-relaxed mb-3">Create And Play Your Flash Card</p>
          <%= link_to cards_path, :class=>"text-gray-600 inline-flex items-center" do %>
            Start
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
      <!----------------/ Flash Card ------------------>
    </div>
    <div class="flex flex-wrap -m-4 md:mt-5">
    <!------------------- Ask Question ---------------->
      <div class="p-4 lg:w-1/2">
        <div class="h-full bg-gradient-to-tr from-green-400 to-green-100 shadow-lg px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">Ask Question</h1>
          <p class="leading-relaxed mb-3">Ask Any Math Question</p>
          <%= link_to questions_path, :class=>"text-gray-600 inline-flex items-center" do %>
            Ask
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
      <!------------------/ Ask Question ---------------->

      <!----------------- Browse Answers ---------------->
      <div class="p-4 lg:w-1/2">
        <div class="h-full bg-gradient-to-tr from-green-400 to-green-100 shadow-lg px-8 pt-16 pb-24 rounded-lg overflow-hidden text-center relative">
          <h1 class="title-font sm:text-2xl text-xl font-medium text-gray-900 mb-3">Problems Database</h1>
          <p class="leading-relaxed mb-3">Browse All Question's Answers</p>
          <%= link_to browse_path, :class=>"text-gray-600 inline-flex items-center" do %>
            Browse
            <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"></path>
              <path d="M12 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
      <!----------------/ Browse Answers ---------------->
    </div>
  </div>
</section>
<!---------------------/ Menus ---------------------->